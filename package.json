{
  "name": "@rusty-butter/discord-mcp",
  "version": "1.0.0",
  "description": "Discord MCP server for Rusty Butter with voice channel support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:sse": "node dist/index.js --sse > discord-mcp.log 2>&1 & echo $! > discord-mcp.pid",
    "stop": "if [ -f discord-mcp.pid ]; then kill $(cat discord-mcp.pid) && rm discord-mcp.pid; else echo 'No server running'; fi",
    "restart": "npm run stop && npm run build && npm run start:sse",
    "logs": "tail -f discord-mcp.log",
    "dev:sse": "tsx src/index.ts --sse",
    "clean": "rm -rf dist discord-mcp.log discord-mcp.pid"
  },
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.17.0",
    "@elevenlabs/elevenlabs-js": "^2.7.0",
    "@modelcontextprotocol/sdk": "^1.17.1",
    "discord.js": "^14.16.3",
    "dotenv": "^17.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "node-fetch": "^3.3.2",
    "node-opus": "^0.3.3",
    "prism-media": "^1.3.5",
    "puppeteer": "^22.0.0",
    "sodium-native": "^4.0.4",
    "tweetnacl": "^1.0.3",
    "wrtc": "^0.4.7",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/node": "^20.0.0",
    "@types/puppeteer": "^5.4.7",
    "@types/webrtc": "^0.0.46",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
